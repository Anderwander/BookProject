    link(href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300&display=swap", rel="stylesheet")
body
block jeje 
    header
        nav 
            ul(class="navSup")
                a(href="/configuracion") 
                    img(src="/img/rueda-dentada.png", id="iconorueda", alt="configuracion")
