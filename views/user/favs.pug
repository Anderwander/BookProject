extends ../index

block content
    section
        h3 Libros favoritos 
        if  user&& user.favorites.length > 0
            ul
                each book in user.favorites
                    li= book.title
                    li 
                        a(href=`/books/book/${book.idbook}`)
                            img(src=`/img/${book.book_cover}`, class="book-cover")
                        form(action=`/favs/${user.username}/favs/${book.idbook}/remove`, method="post")
                            input(type="submit", value="Eliminar", class="btn")
        else
            p No se han a√±adido libros favoritos



    
