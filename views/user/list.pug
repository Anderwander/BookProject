extends ../index

block content 
    h1 Usuarios
    a(href="/aboutus") prueeebaaa
    table(class="table table-striped", id="users")
        thead 
        tbody
            
            each userInstance in users 
                tr
                    td 
                        if userInstance.avatar                       
                            a(href=`/users/user/profile/${userInstance.username}`, method="get")
                                img(src=`${userInstance.avatar}`, alt="avatar", class="avatar")

                        else
                            a(href=`/users/user/profile/${userInstance.username}`, method="get")
                                img(src="/img/default-avatar.jpg", alt="avatar", class="avatar")

                    td
                        p(style="margin: auto;")= userInstance.username
                    //- td= user.email
                    //- td= user.role
                    td 
                        if user && user.role == "admin"
                            form(action=`/users/user/edit/${userInstance.username}`, method="get", class="formBookOption")
                                input(type="submit", name="btn edit", value="Editar", class= "btnBookOption")
                            form(action=`/users/user/delete/${userInstance.username}`, method="post")
                                input(type="submit", value="Eliminar", class="btnBookOption", class="formBookOption")
                            
