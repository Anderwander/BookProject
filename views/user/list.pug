extends ../layout

block content 
    link(rel="stylesheet", href="/style.css")
    h1 Usuarios
        table(class="table table-striped", id="users")
            thead 
                //-th Avatar
                //-th Username
                //-th Mail
                //-th Rol
                //-if auth && auth.role == "admin"
                    th Acciones
            tbody 
                each user in users 
                    tr
                        td 
                            if user.avatar
                                img(src=`${user.avatar}`, alt="avatar", class="avatar")
                            else
                                img(src="/img/default-avatar.jpg", alt="avatar", class="avatar")
                        td= user.username
                        td= user.email
                        td= user.role
                        td 
                            if auth && auth.role == "admin"
                                section(class="actions")
                                
                                form(action=`/users/user/edit/${user.username}`, method="get")
                                    input(type="submit", name="btn edit", value="Editar", class="btn")
                                form(action=`/users/user/delete/${user.username}`, method="post")
