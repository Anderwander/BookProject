extends ../layout

block content 
    link(rel="stylesheet", href="/style.css")
    h1 Libros
        table(class="table table.striped", id="books")
            thead 
                th Titulo 
                th Genero 
                th Autor
                th Sinopsis 
                th ISBN
                th Portada
            tbody 
                each book in books 
                    tr
                        td
                            a(href=`/books/book/${book.idbook}`)= book.title 
                        td= book.type 
                        td= book.writer
                        td= book.synopsis 
                        td= book.ISBN 
                        td= book.book_cover
                        td 
                            // if auth && auth.role == "admin"
                            form(action=`/books/edit/${book.idbook}`, method="get")
                                input(type="submit", name="btn edit", value="Editar")
                            form(action=`/books/delete/${book.idbook}`, method="post")
                                input(type="hidden", name="password", value="mi-contraseña")
                                input(type="submit", value="Eliminar")
        a(href="/books/new")
            button Añadir un libro 